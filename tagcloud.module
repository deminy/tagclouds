/**
 * Menu callback renders a tagcloud page.
 */
function tagcloud_page_chunk($vocs) {

  if ($vocs == NULL) {
    foreach (taxonomy_get_vocabularies(NULL) as $vocabulary) {
      $vocs[] = $vocabulary->vid;
    }
  }

  $tags = tagcloud_get_tags($vocs, variable_get('tagcloud_levels', 6), variable_get('tagcloud_page_amount', '60'));

  $tags = tagcloud_sort_tags($tags);
  $output = theme('tagcloud_weighted', array('terms' => $tags));

  if (!$output) {
    return drupal_not_found();
  }

  $output = "<div class=\"wrapper tagcloud\">$output</div>";

  return $output;
}

/**
 * Menu callback renders a tagcloud page with listed items: each vocabulary.
 */
function tagcloud_page_list($vocs) {

  if ($vocs == NULL) {
    return drupal_not_found();
  }

  $output = '';
  foreach ($vocs as $vid) {
    $vocabulary = taxonomy_vocabulary_load($vid);

    // Clean out vocabulary, so that we don't have to leave security to our
    // theme layer.
    $vocabulary->description = filter_xss_admin($vocabulary->description);
    $vocabulary->name = filter_xss_admin($vocabulary->name);

    $tags = tagcloud_get_tags(array($vocabulary->vid), variable_get('tagcloud_levels', 6), variable_get('tagcloud_page_amount', '60'));
    $tags = tagcloud_sort_tags($tags);

    $output .= theme('tagcloud_list_box', array('vocabulary' => $vocabulary, 'tags' => $tags));
  }

  if (!$output) {
    return drupal_not_found();
  }

  $output = "<div class=\"wrapper tagcloud\">$output</div>";
  return $output;
}

/**
 * Function that gets the information from the database, passes it along to the
 * weight builder and returns these weighted tags. Note that the tags are
 * unordered at this stage, hence they need ordering either by calling our api
 * or by your own ordering data.
 *
 * @param $vids
 *   Vocabulary ids representing the vocabularies where you want the tags from.
 * @param $steps
 *   The amount of tag-sizes you will be using. If you give "12" you still get
 *   six different "weights". Defaults to 6 and is optional.
 * @param $size
 *   The number of tags that will be returned.
 * @param $display OPTIONAL
 *   The type of display "style"=weighted,"count"=numbered display
 *   
 * @return 
 *   An <em>unordered</em> array with tags-objects, containing the attribute
 *   $tag->weight.
 */
function tagcloud_get_tags($vids, $steps = 6, $size = 60, $display = NULL) {

  // Build the options so we can cache multiple versions.
  global $language;
  $options = implode('_', $vids) . '_' . $language->language . '_' . $steps . '_' . $size . "_" . $display;
  // Check if the cache exists.
  $cache_name = 'tagcloud_cache_' . $options;
  $cache = cache_get($cache_name, 'cache_page');

  $tags = array();
  // Make sure cache has data.
  if (isset($cache->data)) {
    $tags = $cache->data;
  }
  else {

    if (!is_array($vids) || count($vids) == 0) {
      return array();
    }
    $sql = 'SELECT COUNT(*) AS count, td.tid, td.vid, td.name, td.description, tn.nid FROM 
      {taxonomy_term_data} td INNER JOIN {taxonomy_index} tn ON td.tid = tn.tid INNER JOIN {node} n ON tn.nid = n.nid 
      WHERE td.vid IN (' . implode(',', array_fill(0, count($vids), '?')) . ') 
        GROUP BY td.tid, td.vid, td.name, td.description HAVING COUNT(*) > 0 ORDER BY count DESC';


    $result = db_query_range($sql, 0, $size, $vids);
    /**
    $query = db_select('taxonomy_term_data', 'td');
    $query->addExpression('COUNT(*)', 'count');
    $query->fields('td',array('tid', 'vid', 'name', 'description'));
    $query->fields('tn',array('nid'));
    $query->join('taxonomy_index', 'tn', 'td.tid = tn.tid');
    $query->join('node', 'n', 'tn.nid = n.nid');
    $query->condition('td.vid', $vids); /// not returning ?
    $query->groupBy('td.tid')->groupBy('td.vid')->groupBy('td.name');    
    $query->groupBy('td.description HAVING COUNT(*) > 0');
    $query->orderBy('count', 'DESC');
    $result = $query->execute();
    */
   foreach ($result as $tag) {
      $tags[$tag->tid] = $tag;  
    }
    if ($display == NULL) $display = variable_get('tagcloud_display_type', 'style');
    $tags = tagcloud_build_weighted_tags($tags, $steps);
    
    
    cache_set($cache_name, $tags, 'cache_page', CACHE_TEMPORARY);
  }
  
  return $tags;
}

/**
 * API that returns an array with weighted tags.
 *
 * This is the hard part. People with better ideas are very very welcome to send
 * these to ber@webschuur.com. Distribution is one thing that needs attention.
 *
 * @param $tags
 *   A list of <em>objects</em> with the following attributes: $tag->count,
 *   $tag->tid, $tag->name and $tag->vid. Each Tag will be calculated and
 *   turned into a tag. Refer to tagcloud_get__tags() for an example.
 * @param $steps
 *   The amount of tag-sizes you will be using. If you give "12" you still get
 *   six different "weights". Defaults to 6 and is optional.
 * @return
 *   An <em>unordered</em> array with tags-objects, containing the attribute
 *   $tag->weight.
 */
function tagcloud_build_weighted_tags($tags, $steps = 6) {
  // Find minimum and maximum log-count. By our MatheMagician Steven Wittens aka
  // UnConeD.
  $tags_tmp = array();
  $min = 1e9;
  $max = -1e9;
  foreach ($tags as $id => $tag) {
    $tag->number_of_posts = $tag->count;
    $tag->weightcount = log($tag->count);
    $min = min($min, $tag->weightcount);
    $max = max($max, $tag->weightcount);
    $tags_tmp[$id] = $tag;
  }
  // Note: we need to ensure the range is slightly too large to make sure even
  // the largest element is rounded down.
  $range = max(.01, $max - $min) * 1.0001;
  foreach ($tags_tmp as $key => $value) {
    $tags[$key]->weight = 1 + floor($steps * ($value->weightcount - $min) / $range);
  }
  return $tags;
}

/**
 * API function to order a set of tags.
 *
 * $Sort = NULL, "title, asc", "title, desc", "count, asc", "count, desc"
 * @todo If you feel like making this more modular, please send me patches.
 */
function tagcloud_sort_tags($tags, $sort = NULL) {
  if ($sort == NULL) {
    $sort = 'title,asc';
    list($sort, $order) = explode(',', variable_get('tagcloud_sort_order', $sort));
  }
 else {
   list($sort, $order) = explode(',', $sort);
 }
  
  switch ($sort) {
    case 'title':
      usort($tags, "_tagcloud_sort_by_title");
      break;
    case 'count':
      usort($tags, "_tagcloud_sort_by_count");
      break;
    case 'random':
      shuffle($tags);
      break;
  }
  if ($order == 'desc') {
    $tags = array_reverse($tags);
  }
  return $tags;
}

/**
 * Callback for usort, sort by count.
 */
function _tagcloud_sort_by_title($a, $b) {
  return strnatcasecmp($a->name, $b->name);
}


function _tagcloud_sort_by_count($a, $b) {
  return $a->count > $b->count;
}

/**
 * Theme function that renders the HTML for the tags.
 *
 * @ingroup themable
 */
function theme_tagcloud_weighted(array $vars) {
  $terms = $vars['terms'];  
 
  $output = '';
  $display = variable_get('tagcloud_display_type', 'style');
  

  if ($display=='style') {
    foreach ($terms as $term) {
      $output .= "<span id='tagcloud-term'>" . tagcloud_display_term_link_weight($term->name, $term->tid, $term->weight, $term->description) . "</span>\n";      
    }
  }
  else {
    foreach ($terms as $term) {
      $output .= "<span id='tagcloud-term'>";
      if ($term->count==1) {
         $output .= tagcloud_display_node_link_count($term->name, $term->nid, $term->count, $term->description);
      }
      else {
         $output .= tagcloud_display_term_link_count($term->name, $term->tid, $term->count, $term->description);
      }
      $output .= " (" . $term->count . ")" . "</span>\n";
    }
  }
  return $output;
}

/**
 * Display Single Tag with Style
 * 
 */
function tagcloud_display_term_link_weight($name, $tid, $weight, $description) {
  return l($name, 'taxonomy/term/' . $tid, 
          array('attributes' => array('class' => array("tagcloud", "level" . $weight), 'rel' => 'tag', 'title'  => $description, )) 
     ) . " \n";
}

/**
 * Display Single Tag with Style
 * 
 */
function tagcloud_display_node_link_count($name, $nid, $count, $description) {
  return l($name, 'node/' . $nid, 
    array('attributes' => array('class' => array("tagcloud"), 'rel' => 'tag', ' title'  => $description, ))
  );  
}

function tagcloud_display_term_link_count($name, $tid, $count, $description) {
  return l($name, 'taxonomy/term/' . $tid, 
    array('attributes' => array('class' => array("tagcloud"), 'rel' => 'tag', 'title'  => $description, ))
  );  
}
/**
 * Theme function that renders an entry in tagcloud/list/ views.
 *
 * @param $vocabulary
 *   A full vocabulary object.
 * @param $tags
 *   An array with weighted tag objects.
 * @ingroup themable
 */
function theme_tagcloud_list_box(array $vars) {
  $vocabulary = $vars['vocabulary'];
  $tags = $vars['tags'];

  $content = theme('tagcloud_weighted', array('terms' => $tags));
  $output = '';
  if ($vocabulary->description) {
    $content = '<h2></h2><div>' . $vocabulary->description . '</div>' . $content;
  }
  $output .= '<h2>' . $vocabulary->name . '</h2><div>' . $content . '</div>';

  return $output;
}

/**
 * Implements hook_block_info().
 */
function tagcloud_block_info() {
  $blocks = array();
  foreach (taxonomy_get_vocabularies() as $voc) {
    $blocks[$voc->vid] = array();
    $blocks[$voc->vid]['info'] = variable_get('tagcloud_block_title_' . $voc->vid, t('Tags in @voc', array('@voc' => $voc->name)));
    $blocks[$voc->vid]['cache'] = DRUPAL_CACHE_GLOBAL;
  }
  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function tagcloud_block_view($delta = '') {
  $block = array();
  if ($voc = taxonomy_vocabulary_load($delta)) {
    $blocks['subject'] = variable_get('tagcloud_block_title_' . $delta, t('Tags in @voc', 
            array('@voc' => $voc->name)));
    $tags = tagcloud_get_tags(array($delta), variable_get('tagcloud_levels', 6), variable_get('tagcloud_block_tags_' . $delta, 12));

    //$tags = tagcloud_sort_tags($tags, "hook_block_view");;
    $tags = tagcloud_sort_tags($tags);

    $blocks['content'] = theme('tagcloud_weighted', array('terms' => $tags)); //return a chunk of 12 tags
    if (count($tags) >= variable_get('tagcloud_block_tags_' . $delta, 12)) {
      $blocks['content'] .= theme('more_link', array('title' => t('more tags'), 'url' => "tagcloud/chunk/{$voc->vid}"));
    }
  }
  return $blocks;
}

